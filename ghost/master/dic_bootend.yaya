//******************************************************************************
// 起動、終了時処理
//******************************************************************************
起動共通スクリプト : void
{
  起動日数加算処理
}

起動日数加算処理
{
  _tmp_now = GETTIME()
  _now = "%(_tmp_now[0])/%(_tmp_now[1])/%(_tmp_now[2])"

  if (ISVAR('起動日数') == 0) {
    起動日数 = 0
  }
  if (最後に起動した日 != _now) {
    起動日数 += 1
  }

  最後に起動した日 = _now
}

終了共通スクリプト : void
{

}

