//******************************************************************************
//メールチェック
//******************************************************************************

//------------------------------------------------------------------------------
//メールチェック開始
//------------------------------------------------------------------------------
OnBIFFBegin
{
	<<"
	せりか００：メールをサーバから取得します。
	">>
}

//------------------------------------------------------------------------------
//メールチェック成功
//------------------------------------------------------------------------------
OnBIFFComplete
{
	if reference[0] == 0
	{
		//---- メールは無かった
		<<"
		せりか００：取得できたメールはありません。
		">>
	}
	else
	{
		//---- メールが届いていた
		<<"
		せりか００：%(reference[0])通のメールを取得。
		">>
	}
}

//------------------------------------------------------------------------------
//メールチェック失敗
//------------------------------------------------------------------------------
OnBIFFFailure
{
	if reference[0] == "timeout"
	{
		//---- タイムアウト
		<<"
		せりか００：メールサーバの接続がタイムアウトしました。
		">>
	}
	elseif reference[0] == "kick"
	{
		//---- 蹴られた
		<<"
		せりか００：メールサーバから接続を拒否されました。
		">>
	}
	elseif reference[0] == "defect"
	{
		//---- 設定誤り
		<<"
		せりか００：接続するために設定された情報に誤りがあります。
		">>
	}
	else
	{
		//---- 原因不明
		<<"
		せりか００：接続できませんが、原因も不明です。
		">>
	}
}


