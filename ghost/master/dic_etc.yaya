//******************************************************************************
//インストール関連
//******************************************************************************

//------------------------------------------------------------------------------
//インストール中のメッセージ
//------------------------------------------------------------------------------
OnInstallBegin
{
	<<"
	せりか００：インストールしています……
	">>
}

//------------------------------------------------------------------------------
//インストール完了メッセージ
//------------------------------------------------------------------------------
OnInstallComplete
{
	reference[0] = SPLIT(reference[0],' with',2)[0] //hogehoge with hemohemo
	ref_id = ''
	if reference[0] == "shell" {
		ref_id = 'shell'
	}
	elseif reference[0] == "ghost" {
		ref_id = 'ghost'
	}
	elseif reference[0] == "balloon" {
		ref_id = 'balloon'
	}
	
	<<"
	せりか００【R0 == 'shell'】：シェル、
	せりか００【R0 == 'ghost'】：ゴースト、
	せりか００【R0 == 'balloon'】：バルーン、
	せりか００【R0 == 'plugin'】：プラグイン、
	せりか００【それ以外】：未分類データ、
	改行無しせりか：「%(reference[1])」、インストール完了しました。
	せりか【STRLEN(ref_id) > 0】：切り替えますか？
	＠メニュー【直前】：切り替える｜OnAYATEMPLATE.InstallChange｜%(ref_id)
	＠メニュー【直前】：切り替えない｜Menu_CANCEL
	">>
}

OnAYATEMPLATE.InstallChange
{
	<<"
	せりか００：\![change,%(reference[0]),lastinstalled]
	">>
}

//------------------------------------------------------------------------------
//インストール失敗メッセージ
//------------------------------------------------------------------------------
OnInstallFailure
{
	<<"
	せりか００：インストールに失敗しました。
	せりか００：原因は、%(reference[0])です。
	">>
}

